                      }else if(data[i].permission_option ==<?php echo \Application\Config\Config::FILE_PERMISSION_RDC;?>){
                         filelist+= '<small class="label label-info">RDC</small>';
                      }else{
                          filelist+= '<small class="label label-default">Tất Cả</small>';
                      }
                     filelist+=  '<div class="tools"> ';
                     filelist+=  '<i class="fa fa-download" onclick="download_file('+data[i].id+')"></i>';
                     filelist+=   '<i class="fa fa-edit" onclick="show_modal_change_permission('+data[i].id+','+data[i].permission_option+')"></i>';
                     filelist+=       '<i class="fa fa-trash-o" onclick="show_modal_delete_file('+data[i].id+')"></i>';
                      filelist+= '</div>';
                     filelist+=   '</li>';
                    }
                    $('#file_list').html(filelist);
                    $('#list_file_num').html(data.length);
                    

            }
        });
